  <PreferenceCategory app:title="@string/az_conf_header">

    <EditTextPreference
        app:key="az_conf_connection"
        app:title="@string/az_conf_connection"
        app:useSimpleSummaryProvider="true" />

    <EditTextPreference
        app:key="az_conf_endpoint"
        app:title="@string/az_conf_endpoint"
        app:useSimpleSummaryProvider="true" />
  </PreferenceCategory>

  <PreferenceCategory app:title="@string/cognitive_header">

    <EditTextPreference
        app:key="az_cognitive_endpoint"
        app:title="@string/az_cognitive_endpoint"
        app:useSimpleSummaryProvider="true" />

    <EditTextPreference
        app:key="az_cognitive_key"
        app:title="@string/az_cognitive_key"
        app:useSimpleSummaryProvider="true" />

  </PreferenceCategory>
